<h1>Your comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user.comments.each do |comment| %>
      <tr>
        <td><%= comment.user_id %></td>
        <td><%= comment.content %></td>
        <td><%= comment.title %></td>
        <td><%= link_to 'Show', user_comment_path(@user, comment) %></td>
        <td><%= link_to 'Edit', edit_user_comment_path(@user, comment) %></td>
        <td><%= link_to 'Destroy', [@user, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_user_comment_path %>
