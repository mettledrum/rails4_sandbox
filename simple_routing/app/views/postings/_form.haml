.panel.panel-default
  .panel-heading
  .panel-body
    = form_for [@user, @posting] do |f|
      .form-group
        = f.label :title
        = f.text_field :title, class: 'form-control'
      .form-group
        = f.label :content
        = f.text_area :content, class: 'form-control'
      .pull-right
        = f.submit class: 'btn btn-default'
  .panel-footer