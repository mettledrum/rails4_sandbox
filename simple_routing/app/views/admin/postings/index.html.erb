<h1>Listing postings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @postings.each do |posting| %>
      <tr>
        <td><%= posting.title %></td>
        <td><%= posting.content %></td>
        <td><%= posting.user_id %></td>
        <td><%= link_to 'Show', [:admin, posting] %></td>
        <td><%= link_to 'Edit', edit_admin_posting_path(posting) %></td>
        <td><%= link_to 'Destroy', [:admin, posting], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

